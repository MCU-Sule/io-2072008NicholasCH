<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="550.0" prefWidth="550.0" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pt07_2072008.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Komentar :" />
    <ListView fx:id="lvKomen" prefHeight="269.0" prefWidth="460.0" />
    <VBox prefHeight="163.0" prefWidth="460.0" spacing="20.0">
        <children>
            <Label alignment="TOP_LEFT" text="Username :" VBox.vgrow="ALWAYS" />
            <TextField fx:id="txtUser" />
            <Label alignment="TOP_LEFT" text="Komentarmu :" />
            <TextArea fx:id="txtKomen" prefHeight="200.0" prefWidth="200.0" />
        </children>
    </VBox>
    <HBox alignment="TOP_CENTER" prefHeight="28.0" prefWidth="460.0">
        <children>
            <Button fx:id="btnAdd" onAction="#addKomen" text="Add Comment">
            <HBox.margin>
               <Insets right="5.0" top="5.0" />
            </HBox.margin></Button>
            <Button fx:id="btnSave" onAction="#saveKomen" text="Save Comment">
            <HBox.margin>
               <Insets right="5.0" top="5.0" />
            </HBox.margin></Button>
            <Button fx:id="btnLoad" onAction="#loadKomen" text="Load Comment">
            <HBox.margin>
               <Insets right="5.0" top="5.0" />
            </HBox.margin></Button>
        </children>
    </HBox>
    <HBox alignment="TOP_CENTER" prefHeight="40.0" prefWidth="460.0">
        <children>
            <Button fx:id="btnSave2" onAction="#saveKomen2" text="Save Comment 2">
            <HBox.margin>
               <Insets right="5.0" top="5.0" />
            </HBox.margin></Button>
            <Button fx:id="btnLoad2" onAction="#loadKomen2" text="Load Comment 2">
            <HBox.margin>
               <Insets right="5.0" top="5.0" />
            </HBox.margin></Button>
        </children>
    </HBox>
</VBox>
